---
import '../styles/global.css';
import '../styles/reset.css';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{title}</title>
    <meta name="description" content="Find and connect with top-rated dentists in your area. Learn about their specialties and book appointments easily.">
    <meta name="keywords" content="dentist, dental care, teeth cleaning, dental implants, orthodontics, cosmetic dentistry, dental specialists">
    <link rel="canonical" href={Astro.url.href} />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="alternate icon" href="/favicon.ico" />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content="Find and connect with top-rated dentists in your area. Learn about their specialties and book appointments easily." />
    <meta property="og:url" content={Astro.url.href} />
    <meta property="og:image" content="/social-image.jpg" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content="Find and connect with top-rated dentists in your area. Learn about their specialties and book appointments easily." />
    <meta name="twitter:image" content="/social-image.jpg" />

    <!-- Structured Data -->
    <script type="application/ld+json">
    {
      "@context": "https://schema.org",
      "@type": "Dentist",
      "name": "Top Dentists in London, Ontario",
      "image": "/social-image.jpg",
      "description": "Find and connect with top-rated dentists in your area",
      "url": {Astro.url.href},
      "telephone": "",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "",
        "addressLocality": "",
        "postalCode": "",
        "addressCountry": ""
      },
      "sameAs": []
    }
    </script>
</head>
<body>
    <header>
        <h1>{title}</h1>
    </header>
    <main>
        <slot />
    </main>
</body>
</html>
