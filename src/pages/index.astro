---
import BaseLayout from '../layouts/BaseLayout.astro';
import DentistCard from '../components/DentistCard.astro';
import dentists from '../data/dentists.json';
---

<BaseLayout title="Top 10 Dentists in London, Ontario">
    <section class="dentist-list">
        {dentists.dentists.map((dentist, index) => (
            <DentistCard dentist={dentist} number={index + 1} />
        ))}
    </section>
</BaseLayout>

<style>
.dentist-list {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    gap: 1rem;
}
</style>
